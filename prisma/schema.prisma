generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "cockroachdb"
    url      = env("DATABASE_URL")
}

model Flaggers {
    id           String  @id @unique @default(uuid())
    code         BigInt  @unique
    county       String
    constituency String
    password     String
    Cases        Cases[]
}

model Cases {
    id           String   @id @unique @default(uuid())
    created      DateTime @default(now())
    updated      DateTime @updatedAt
    title        String
    county       String
    constituency String
    case_type    String
    describtion  String
    image        String
    seconders    String[]
    status       Status
    alleged      String
    alleged_Role String
    created_by   Flaggers @relation(fields: [flaggerId], references: [id])
    flaggerId    String
}

enum Status {
    ALLEGATION
    INVESTIGATION
    TRIAL
    CONVICTED
    CLOSED
}
